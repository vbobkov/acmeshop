	function generateProductURL($home_url, $product_title) {
		return $home_url . strtolower(
			preg_replace('/-{2,}/', '-',
				preg_replace('/^-/', '',
					preg_replace('/-$/', '',
						preg_replace('/[^0-9A-Za-z-]/', '-', $product_title)
					)
				)
			)
		) . ".html";
	}

