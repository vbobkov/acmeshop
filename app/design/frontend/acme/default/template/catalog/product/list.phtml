	function bestMatch(&$p1, &$p2) {
		if(isset($_GET['q'])) {
			$search_query = $_GET['q'];
		}
		else {
			$search_query = null;
		}

		$p1_score = bestMatchScore($p1->_data);
		$p2_score = bestMatchScore($p2->_data);
		$score_comparison = array();
		foreach($p1_score as $name => $value) {
			if($p1_score[$name] > $p2_score[$name]) {
				$score_comparison[$name] = 1;
			}
			else if($p1_score[$name] < $p2_score[$name]) {
				$score_comparison[$name] = -1;
			}
			else {
				$score_comparison[$name] = 0;
			}
		}

		$comparison_result = 0;
		foreach($score_comparison as $idx => $value) {
			if($value != 0) {
				$comparison_result = $value;
				break;
			}
		}

		return $comparison_result;
	}

	function bestMatchScore(&$product_data) {
		$score = array(
			'name' => partialStringMatch($search_query, $product_data['name']),
			'description' => partialStringMatch($search_query, $product_data['description']),
			'short_description' => partialStringMatch($search_query, $product_data['short_description']),
			'name_segments' => array(),
			'description_segments' => array(),
			'short_description_segments' => array()
		);
		foreach(explode(' ', $search_query) as $segment) {
			$score['name_segments'][] = partialStringMatch($search_query, $product_data['name']);
			$score['description_segments'][] = partialStringMatch($search_query, $product_data['description']);
			$score['short_description_segments'][] = partialStringMatch($search_query, $product_data['short_description']);
		}
		return $score;
	}

	function partialStringMatch($needle, $haystack) {
		$characters_matched = 0;
		$j = 0;
		for($i = 0; $i < strlen($haystack); $i++) {
			print_r($needle[$j] . "\n");
			if($needle[$j] == $haystack[$i]) {
				$j++;
			}
			else {
				if($characters_matched < $j) {
					$characters_matched = $j;
				}
				$j = 0;
			}
		}
		return $characters_matched;
	}

