<config>
    <modules>
        <Creativestyle_Core>
            <version>1.1.0</version>
        </Creativestyle_Core>
    </modules>
    <global>
        <helpers>
            <creativestyle>
                <class>Creativestyle_Core_Helper</class>
            </creativestyle>
        </helpers>
        <models>
            <creativestyle>
                <class>Creativestyle_Core_Model</class>
            </creativestyle>
        </models>
    </global>
    <adminhtml>
        <acl>
            <resources>
                <all>
                    <title>Allow Everything</title>
                </all>
                <admin>
                    <children>
                        <creativestyle translate="title">
                            <title>creativestyle Extensions</title>
                        </creativestyle>
                    </children>
                </admin>
            </resources>
        </acl>
        <menu>
            <creativestyle>
                <title>creativestyle</title>
                <sort_order>99</sort_order>
            </creativestyle>
        </menu>
        <translate>
            <modules>
                <Creativestyle_Core>
                    <files>
                        <default>Creativestyle_Core.csv</default>
                    </files>
                </Creativestyle_Core>
            </modules>
        </translate>
        <layout>
            <updates>
                <creativestyle>
                    <file>creativestyle.xml</file>
                </creativestyle>
            </updates>
        </layout>
    </adminhtml>
</config>
